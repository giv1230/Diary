@model IEnumerable<$safeprojectname$.Models.Meeting>

@{
    ViewData["Title"] = "רשימת פגישות";
}

<h1>רשימת הפגישות</h1>

<p>
    <a asp-action="Create">צור פגישה חדשה</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            מתאריך: <input type="date" name="startDate" value="@ViewData["Data"]" />
            ועד לתאריך: <input type="date" name="endDate" value="@ViewData["Data"]" />
            <input type="submit" value="חפש" class="btn btn-default" /> |
            <a asp-action="Index">חזרה לרשימה המלאה</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importancy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Importancy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MType.MeetingType)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">ערוך</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">פרטים</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">מחק</a>
                </td>
            </tr>
        }
    </tbody>
</table>
